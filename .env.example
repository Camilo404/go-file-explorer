SERVER_PORT=8080
SERVER_READ_HEADER_TIMEOUT=5s
SERVER_WRITE_TIMEOUT=10m
SERVER_IDLE_TIMEOUT=120s
REQUEST_TIMEOUT=30s
TRANSFER_TIMEOUT=10m
TRANSFER_IDLE_TIMEOUT=60s

STORAGE_ROOT=./data
TRASH_ROOT=./data/.trash
THUMBNAIL_ROOT=./data/.thumbnails
CHUNK_TEMP_DIR=./data/.chunks
MAX_UPLOAD_SIZE=21474836480

# SECURITY: Generate a strong secret with: openssl rand -base64 48
# Must be at least 32 characters. Do NOT use the example value in production.
JWT_SECRET=CHANGE_ME_generate_with_openssl_rand_base64_48
JWT_ACCESS_TTL=15m
JWT_REFRESH_TTL=168h

# SECURITY: Set specific origins for production (e.g. https://files.example.com)
# Wildcard '*' is insecure when exposed via cloudflared or any public tunnel.
CORS_ORIGINS=*
RATE_LIMIT_RPM=100
AUTH_RATE_LIMIT_RPM=10

SEARCH_MAX_DEPTH=10
SEARCH_TIMEOUT=30s

ALLOWED_MIME_TYPES=

# PostgreSQL (required)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/file_explorer?sslmode=disable
DB_MAX_CONNS=10
DB_MIN_CONNS=2
